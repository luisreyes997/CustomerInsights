
# âœ… Segment by Age
def segment_by_age(df):
    bins = [0, 25, 35, 50, 100]
    labels = ['<25', '25â€“35', '36â€“50', '50+']
    df['age_group'] = pd.cut(df['Age'], bins=bins, labels=labels)
    return df

df = segment_by_age(df)

# âœ… Segment by Region
def segment_by_region(df):
    return df.groupby('Region')

region_groups = segment_by_region(df)


# âœ… Display segmented results
print("\nğŸ“Š Age Groups:")
print(df[['CustomerID', 'Age', 'age_group']].head())

print("\nğŸ“Š Region Segments:")
for region, group in region_groups:
    print(f"\nRegion: {region}")
    print(group[['CustomerID', 'TotalSpend']].head())
